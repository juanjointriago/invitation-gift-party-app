rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ===================================
    // IMÁGENES DE FIESTAS
    // ===================================
    // Imágenes de portada, banners, galería, etc.
    match /party-images/{partyId}/{imageType}/{fileName} {
      // Lectura pública (para invitaciones)
      allow read: if true;
      
      // Escritura solo para usuarios autenticados
      allow write: if request.auth != null;
      
      // Validaciones adicionales
      allow write: if request.auth != null &&
        request.resource.size < 5 * 1024 * 1024 && // Máximo 5MB
        request.resource.contentType.matches('image/.*'); // Solo imágenes
    }
    
    // ===================================
    // INVITACIONES (legacy - ya no se usa)
    // ===================================
    match /invitations/{invitationId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // ===================================
    // AVATARES DE USUARIO
    // ===================================
    match /user-avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ===================================
    // RESTO DE ARCHIVOS (por defecto)
    // ===================================
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
